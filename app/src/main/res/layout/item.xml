<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_margin="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="14dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/type"
                android:layout_toLeftOf="@id/type"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="Code title"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/type"
                style="@style/langStyle"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style"
                android:text="Click"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/code"
                style="@style/CodeAppearence"
                android:maxHeight="120dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here must be some" />


            <Button
                android:id="@+id/qrBtn"

                android:layout_below="@id/code"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                style="@style/Widget.AppCompat.Button.Colored"
                android:theme="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Показать QR код"
                android:textColor="@color/colorPrimary" />

            <Button
                android:textColor="@android:color/holo_green_dark"
                android:id="@+id/linkButton"
                android:theme="@style/Widget.AppCompat.Button.Colored"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/code"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:text="Создать ссылку" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>