<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_pressed="true" >
        <layer-list>
            <item>

                <shape android:shape="rectangle">
                    <padding
                        android:right="2dp"
                        android:left="2dp"
                        android:bottom="2dp"
                        android:top="2dp"/>
                    <!--<stroke android:width="4dip" android:color="#40007BFF"/>-->
                    <corners
                        android:bottomLeftRadius="6px"
                        android:bottomRightRadius="6px"
                        android:topLeftRadius="6px"
                        android:topRightRadius="6px"/>
                    <solid android:color="#40007BFF" />
                </shape>
            </item>
            <item>

                <shape android:shape="rectangle">

                    <!--<stroke android:width="4dip" android:color="#40007BFF"/>-->
                    <corners
                        android:bottomLeftRadius="6px"
                        android:bottomRightRadius="6px"
                        android:topLeftRadius="6px"
                        android:topRightRadius="6px"/>
                    <solid android:color="@color/primaryDarken" />
                </shape>
            </item>
        </layer-list>


    </item>

    <item>
        <layer-list>
            <item>
                <!--surround shadow-->
                <shape android:shape="rectangle">
                    <padding
                        android:right="2dp"
                        android:left="2dp"
                        android:bottom="2dp"
                        android:top="2dp"/>
                    <!--<stroke android:width="4dip" android:color="#40007BFF"/>-->
                    <corners
                        android:bottomLeftRadius="6px"
                        android:bottomRightRadius="6px"
                        android:topLeftRadius="6px"
                        android:topRightRadius="6px"/>
                    <solid android:color="#00007BFF" />
                </shape>
            </item>
            <item>
                <!--main color-->
                <shape android:shape="rectangle">
                    <padding
                        android:right="4dp"
                        android:left="4dp"
                        android:bottom="4dp"
                        android:top="4dp"/>
                    <!--<stroke android:width="4dip" android:color="#40007BFF"/>-->
                    <corners
                        android:bottomLeftRadius="6px"
                        android:bottomRightRadius="6px"
                        android:topLeftRadius="6px"
                        android:topRightRadius="6px"/>
                    <solid android:color="@color/primary" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>