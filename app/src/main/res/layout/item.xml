<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    app:fontFamily="@font/montserratregular"
    android:fontFamily="@font/montserratregular"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.MainActivity">

    <android.support.v7.widget.CardView
        app:fontFamily="@font/montserratregular"
        android:fontFamily="@font/montserratregular"
        android:layout_margin="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            app:fontFamily="@font/montserratregular"
            android:fontFamily="@font/montserratregular"
            android:padding="14dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/montserratregular"
                app:fontFamily="@font/montserratregular"

                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/type"
                android:layout_toLeftOf="@id/type"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/postTitle"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:textSize="17sp" />

            <TextView
                android:fontFamily="@font/montserratsemibold"
                app:fontFamily="@font/montserratsemibold"

                android:id="@+id/type"
                style="@style/langStyle"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style"
                android:text="@string/typeText"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/code"
                style="@style/CodeAppearence"
                android:maxHeight="120dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text" />


            <Button
                android:fontFamily="@font/montserratmedium"
                app:fontFamily="@font/montserratmedium"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/design_default_color_primary"

                android:layout_marginTop="7dp"
                android:layout_height="40dp"
                android:id="@+id/qrBtn"
                android:layout_below="@id/code"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"

                android:text="@string/qrShow" />

            <Button
                android:fontFamily="@font/montserratmedium"
                app:fontFamily="@font/montserratmedium"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/puprle"

                android:layout_marginTop="7dp"
                android:id="@+id/linkButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@id/code"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"

                android:text="@string/linkButtonText" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>