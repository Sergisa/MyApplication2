<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <padding
                android:bottom="1px"
                android:left="10px"
                android:right="10px"
                android:top="1px"/>
            <stroke
                android:width="4dip"
                android:color="#80828a91"/>
            <solid android:color="@color/grey" />
            <corners
                android:bottomLeftRadius="7px"
                android:bottomRightRadius="7px"
                android:topLeftRadius="7px"
                android:topRightRadius="7px"/>

        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dip"
                android:color="@color/grey"/>
            <corners
                android:bottomLeftRadius="7px"
                android:bottomRightRadius="7px"
                android:topLeftRadius="7px"
                android:topRightRadius="7px"/>

            <padding
                android:bottom="1px"
                android:left="10px"
                android:right="10px"
                android:top="1px"/>
        </shape>
    </item>

</selector>